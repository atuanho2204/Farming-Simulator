<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="FarmUIVBox"
           stylesheets="@../style.css"
           xmlns="http://javafx.com/javafx/11.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="main.farm.FarmController"
           style="-fx-background-color: black">
    <BorderPane>
        <top>
            <HBox fx:id="headerHolder" prefHeight="50" maxHeight="50" minHeight="50">
                <!-- holds the header-->
            </HBox>
        </top>

        <left>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                </rowConstraints>
                <StackPane fx:id="employmentHolder" prefHeight="325" prefWidth="300"
                           GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-background-color: blue">
                </StackPane>
                <StackPane fx:id="notificationHolder" prefHeight="325" prefWidth="300"
                           GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-background-color: green">
                </StackPane>
            </GridPane>
        </left>

        <center>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" prefWidth="575"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints prefHeight="750.0" vgrow="ALWAYS"/>
                </rowConstraints>
                <HBox fx:id="farmPlots" GridPane.columnIndex="0" GridPane.rowIndex="0"
                      >
                    <!--farm plots are generated-->
                </HBox>
            </GridPane>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" prefWidth="575"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints prefHeight="750.0" vgrow="ALWAYS"/>
                </rowConstraints>
                <HBox fx:id="farmPlots2" GridPane.columnIndex="0" GridPane.rowIndex="0"
                >
                    <!--farm plots are generated-->
                </HBox>
            </GridPane>
        </center>

        <right>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                </rowConstraints>
                <StackPane fx:id="marketHolder" prefHeight="375" prefWidth="325"
                           GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <ImageView fx:id="marketImage" fitHeight="375" fitWidth="325">
                        <image>
                            <Image url="@../images/market.jpeg"/>
                        </image>
                    </ImageView>
                </StackPane>
                <StackPane fx:id="inventoryHolder" prefHeight="375" prefWidth="325"
                           GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <ImageView fx:id="inventoryImage" fitHeight="375" fitWidth="325">
                        <image>
                            <Image url="@../images/inventory.jpeg"/>
                        </image>
                    </ImageView>
                </StackPane>
            </GridPane>
        </right>

        <bottom>
        </bottom>

    </BorderPane>
</StackPane>
