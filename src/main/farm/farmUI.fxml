<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.Pane?>
<VBox alignment="center"
      stylesheets="@../style.css"
      xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.farm.FarmController"
      prefHeight="800.0" prefWidth="1200.0"
      fx:id="FarmUIVBox">
    <GridPane fx:id="topBar">
        <columnConstraints>
            <ColumnConstraints fillWidth="true" hgrow="ALWAYS"/>
            <ColumnConstraints fillWidth="true" hgrow="ALWAYS"/>
            <ColumnConstraints fillWidth="true" hgrow="ALWAYS"/>
            <ColumnConstraints fillWidth="true" hgrow="ALWAYS"/>
        </columnConstraints>
        <!-- This is where the information about the farm, money, difficulty goes.-->
        <Pane GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0">
            <Label fx:id="difficultyLevel" styleClass="dataLabel">
            </Label>
        </Pane>
        <Label fx:id="startingMoney" styleClass="dataLabel"
               GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0">
        </Label>
        <Label fx:id="currentDate" styleClass="dataLabel"
               GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="0">
        </Label>
        <Button fx:id="pauseButtonGS" mnemonicParsing="false"
                onAction="#handlePauseButton" text="Pause"
                GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="0">
        </Button>
        <Button fx:id="quitButtonGS" mnemonicParsing="false"
                onAction="#handleQuitButton" text="Quit" textAlignment="CENTER"
                GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.rowIndex="0">
        </Button>
    </GridPane>
    <GridPane fx:id="farmPlots">
        <!-- This is where the farm plots are-->
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="ALWAYS"/>
            <RowConstraints vgrow="ALWAYS"/>
            <RowConstraints vgrow="ALWAYS"/>
            <RowConstraints vgrow="ALWAYS"/>
            <RowConstraints vgrow="ALWAYS"/>
        </rowConstraints>

        <Button GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0">(0,0)

        </Button>
        <Button GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0">(1,0)
        </Button>
        <Button GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="0">(2,0)
        </Button>
        <Button GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="0">(3,0)
        </Button>

        <Button GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1">(0,1)
        </Button>
        <Button GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">(1,1)
        </Button>
        <Button GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1">(2,1)
        </Button>
        <Button GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="1">(3,1)
        </Button>

        <Button GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2">(0,2)
        </Button>
        <Button GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2">(1,2)
        </Button>
        <Button GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2">(2,2)
        </Button>
        <Button GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="2">(3,2)
        </Button>

    </GridPane>

</VBox>
