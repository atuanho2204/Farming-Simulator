<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="FarmUIVBox"
           stylesheets="@../style.css"
           xmlns="http://javafx.com/javafx/11.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="main.farm.FarmController">
    <ImageView fx:id="farmImage" fitHeight="800.0" fitWidth="1300.0">
        <image>
            <Image url="@../images/farm_background.jpg"/>
        </image>
    </ImageView>
    <BorderPane>
        <top>
            <HBox fx:id="headerHolder" prefHeight="50" maxHeight="50" minHeight="50">
                <!-- holds the header-->
            </HBox>
        </top>

        <left>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                </rowConstraints>
                <StackPane fx:id="employmentHolder" prefHeight="375" prefWidth="360"
                           GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-background-color: blue">
                </StackPane>
                <StackPane fx:id="notificationHolder" prefHeight="375" prefWidth="360"
                           GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-background-color: green">
                </StackPane>
            </GridPane>
        </left>

        <center>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" prefWidth="680"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints prefHeight="750.0" vgrow="ALWAYS"/>
                </rowConstraints>
                <HBox fx:id="farmPlots" GridPane.columnIndex="0" GridPane.rowIndex="0"
                      >
                    <!--farm plots are generated-->
                </HBox>
            </GridPane>
        </center>

        <right>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                </rowConstraints>
                <StackPane fx:id="marketHolder" prefHeight="375" prefWidth="400"
                           GridPane.columnIndex="0" GridPane.rowIndex="0">
                </StackPane>
                <StackPane fx:id="inventoryHolder" prefHeight="375" prefWidth="400"
                           GridPane.columnIndex="0" GridPane.rowIndex="1">
                </StackPane>
            </GridPane>
        </right>

        <bottom>
        </bottom>

    </BorderPane>
</StackPane>
