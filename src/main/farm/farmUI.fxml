<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center"
      stylesheets="@../style.css"
      xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.farm.FarmController"
      prefHeight="800.0" prefWidth="1200.0">
    <HBox fx:id="topBar">
        <!-- This is where the information about the farm, money, difficulty goes.-->
        <Label fx:id="Low">
            <padding>
                <Insets right="10"/>
            </padding>
            Low
        </Label>
        <Label fx:id="Medium">
            <padding>
                <Insets right="10"/>
            </padding>
            Medium
        </Label>
        <Label fx:id="High">
            <padding>
                <Insets right="10"/>
            </padding>
            High
        </Label>
        <Button fx:id="pauseButtonGS" alignment="CENTER" mnemonicParsing="false"
                onAction="#handlePauseButton" text="Pause">
        </Button>
        <Button fx:id="quitButtonGS" alignment="CENTER" mnemonicParsing="false"
                onAction="#handleQuitButton" text="Quit" textAlignment="CENTER">
        </Button>
    </HBox>
    <GridPane fx:id="farmPlots" hgap="10" vgap="10">
        <!-- This is where the farm plots are-->
        <padding>
            <Insets bottom="40" left="40" right="40" top="40"/>
        </padding>
        <columnConstraints>
            <ColumnConstraints fillWidth="true" hgrow="ALWAYS"/>
            <ColumnConstraints fillWidth="true" hgrow="ALWAYS"/>
            <ColumnConstraints fillWidth="true" hgrow="ALWAYS"/>
            <ColumnConstraints fillWidth="true" hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints fillHeight="true" vgrow="ALWAYS"/>
            <RowConstraints fillHeight="true" vgrow="ALWAYS"/>
            <RowConstraints fillHeight="true" vgrow="ALWAYS"/>
            <RowConstraints fillHeight="true" vgrow="ALWAYS"/>
        </rowConstraints>

        <Button GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0">(0,0)

        </Button>
        <Button GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0">(1,0)
        </Button>
        <Button GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="0">(2,0)
        </Button>
        <Button GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="0">(3,0)
        </Button>

        <Button GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1">(0,1)
        </Button>
        <Button GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">(1,1)
        </Button>
        <Button GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1">(2,1)
        </Button>
        <Button GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="1">(3,1)
        </Button>

        <Button GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2">(0,2)
        </Button>
        <Button GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2">(1,2)
        </Button>
        <Button GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2">(2,2)
        </Button>
        <Button GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="2">(3,2)
        </Button>

    </GridPane>

</VBox>
